# Check for minimum direnv version
if ! direnv_version 2.32.0; then
  echo "direnv version 2.32.0 or higher is required. Please upgrade direnv." >&2
  exit 1
fi

# Load environment variables
dotenv_if_exists .env

# Add scripts directory to PATH if it exists
if [ -d ./scripts ]; then
  PATH_add scripts
  # Ensure scripts are executable
  chmod +x ./scripts/*.sh 2>/dev/null || true
fi

# Watch files for changes
watch_file .env